<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.cn.Tour">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.sagar.welcome.MainActivity"
        tools:showIn="@layout/activity_main"

        android:layout_gravity="left|center_vertical"
        android:background="#2345a1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="All fields are required"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Appointment Date"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/nme"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtappdate"
            android:textSize="25dp"
            android:background="@android:drawable/editbox_background"
            android:allowUndo="true"
            android:layout_above="@+id/nme"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtncal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/txtappdate"
            android:background="@drawable/calendar"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/txtappdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nme"
            android:background="@android:drawable/editbox_background"
            android:textSize="25dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_alignRight="@+id/txtappdate"
            android:layout_alignEnd="@+id/txtappdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:textSize="25dp"
            android:background="@android:drawable/editbox_background"
            android:layout_above="@+id/num"
            android:layout_alignRight="@+id/imgbtncal"
            android:layout_alignEnd="@+id/imgbtncal"
            android:layout_marginBottom="20dp"
            android:layout_alignLeft="@+id/txtappdate"
            android:layout_alignStart="@+id/txtappdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Phone"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/num"
            android:textSize="25dp"
            android:background="@android:drawable/editbox_background"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/nme"
            android:layout_alignStart="@+id/nme" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Message"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/customMsg"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/customMsg"
            android:height="80dp"
            android:background="@android:drawable/editbox_background"
            android:layout_above="@+id/Conf"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/Conf"
            android:textColor="#ffffff"
            android:background="#06a034"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trekking"
            android:id="@+id/textView24"
            android:textColor="#ffffff"
            android:layout_above="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:spinnerMode="dialog"
            android:textColor="#ffffff"
            android:background="@android:drawable/editbox_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtappdate"
            android:layout_alignStart="@+id/txtappdate"
            android:layout_alignBottom="@+id/textView24" />


    </RelativeLayout>

</FrameLayout>